{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "google",
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"indent": ["error", "tab"],
		"max-len": [
			"error",
			{
				"code": 200,
				"tabWidth": 2,
				"ignoreComments": true,
				"ignoreTrailingComments": true,
				"ignoreUrls": true
			}
		],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"object-curly-spacing": ["error", "always"],
		"quotes": ["error", "double"]
	}
}
